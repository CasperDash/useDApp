{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["es2021", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@usedapp/core": ["packages/core/src"],
      "@usedapp/core/*": ["packages/core/src/*"],
      "@usedapp/react": ["packages/react/src"],
      "@usedapp/react/*": ["packages/react/src/*"],
      "usedapp": ["packages/react/src"],
      "usedapp/*": ["packages/react/src/*"],
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2021",
    "typeRoots": [
      "packages/core/src/types/*.d.ts"
    ]
  },
  "exclude": ["**/node_modules/**", "**/dist/**"],
  "include": [
    "examples/**/*",
    "packages/**/*",
    "packages/**/*.ts",
    "vitest.config.ts"
  ]
}
